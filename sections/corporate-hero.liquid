<div id="{{ section.id }}" class="corporate-hero-section {{ section.settings.custom_classes }}">
  <div class="corporate-hero-wrapper">
    <div class="corporate-hero-content">
      
      <!-- Images First -->
      {% if section.settings.create_corporate_image != blank %}
        <div class="corporate-hero-create-image">
          {% assign create_image_alt = section.settings.create_corporate_image.alt | default: 'Create Your Solution' %}
          {{
            section.settings.create_corporate_image
            | image_url: width: 1101, height: 570
            | image_tag:
              alt: create_image_alt,
              loading: 'lazy',
              sizes: '(max-width: 768px) 100vw, 1101px',
              widths: '400, 600, 800, 1000'
          }}
        </div>
      {% endif %}

      <!-- Text Content -->
      {% if section.settings.main_title != blank %}
        <h1 class="corporate-hero-title">
          {{ section.settings.main_title }}
          {% if section.settings.highlighted_text != blank %}
            <span class="corporate-hero-title-highlight">
              <span style="color: var(--corporate-hero-highlight-color);">
                {{ section.settings.highlighted_text }}
              </span>
              {% if section.settings.highlighted_text_2 != blank %}
                <span style="color: var(--corporate-hero-highlight-color-2);">
                  {{ section.settings.highlighted_text_2 }}
                </span>
              {% endif %}
            </span>
          {% endif %}
        </h1>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="corporate-hero-description">
          {{ section.settings.description }}
        </div>
      {% endif %}

      <!-- Buttons -->
      <div class="corporate-hero-buttons">
        {% if section.settings.primary_button_text != blank and section.settings.primary_button_url != blank %}
          <a href="{{ section.settings.primary_button_url }}" class="corporate-hero-btn corporate-hero-btn-primary">
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_url != blank %}
          <a href="{{ section.settings.secondary_button_url }}" class="corporate-hero-btn corporate-hero-btn-secondary">
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>

      <!-- Additional Images -->
      {% if section.settings.corporate_bottle_image != blank %}
        <div class="corporate-hero-bottle">
          {% assign bottle_image_alt = section.settings.corporate_bottle_image.alt | default: 'Corporate Product' %}
          {{
            section.settings.corporate_bottle_image
            | image_url: width: 300, height: 600
            | image_tag:
              alt: bottle_image_alt,
              loading: 'lazy',
              sizes: '(max-width: 768px) 200px, 300px',
              widths: '200, 250, 300, 350'
          }}
        </div>
      {% endif %}
    </div>

    <!-- Decorative Images -->
    {% if section.settings.left_leaf_image != blank %}
      <div class="corporate-hero-leaf-left">
        {% assign left_leaf_alt = section.settings.left_leaf_image.alt | default: 'Decorative Element' %}
        {{
          section.settings.left_leaf_image
          | image_url: width: 439, height: 738
          | image_tag:
            alt: left_leaf_alt,
            loading: 'lazy',
            sizes: '(max-width: 768px) 150px, 439px',
            widths: '150, 200, 300, 400'
        }}
      </div>
    {% endif %}

    {% if section.settings.right_leaf_image != blank %}
      <div class="corporate-hero-leaf-right">
        {% assign right_leaf_alt = section.settings.right_leaf_image.alt | default: 'Decorative Element' %}
        {{
          section.settings.right_leaf_image
          | image_url: width: 439, height: 738
          | image_tag:
            alt: right_leaf_alt,
            loading: 'lazy',
            sizes: '(max-width: 768px) 150px, 439px',
            widths: '150, 200, 300, 400'
        }}
      </div>
    {% endif %}
  </div>

  {% comment %} Bottom Info Block {% endcomment %}
  <div class="corporate-hero-bottom-info">
    <div class="corporate-hero-bottom-wrapper">
      <div class="corporate-hero-steps">
        {% assign steps = 'step1_text,step2_text,step3_text,step4_text' | split: ',' %}
        {% assign step_defaults = 'SELECT SOLUTION,CUSTOMIZE APPROACH,PLACE ORDER,ACHIEVE RESULTS' | split: ',' %}

        {% for step in steps %}
          <!-- Icon before step -->
          {% if section.settings.step_icon != blank %}
            <div class="corporate-hero-step-icon">
              {{
                section.settings.step_icon
                | image_url: width: 41, height: 29
                | image_tag: alt: 'Step Icon', loading: 'lazy'
              }}
            </div>
          {% endif %}

          <!-- Step -->
          <div class="corporate-hero-step">
            <div class="corporate-hero-step-text">
              <span>{{ section.settings[step] | default: step_defaults[forloop.index0] }}</span>
            </div>
          </div>
        {% endfor %}

        <!-- Final icon after last step -->
        {% if section.settings.step_icon != blank %}
          <div class="corporate-hero-step-icon">
            {{
              section.settings.step_icon
              | image_url: width: 41, height: 29
              | image_tag: alt: 'Step Icon', loading: 'lazy'
            }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  :root {
