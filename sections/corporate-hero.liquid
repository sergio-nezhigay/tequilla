    --corporate-hero-title-color: {{ section.settings.title_color | default: '#000000' }};
    --corporate-hero-highlight-color: {{ section.settings.highlight_color | default: '#7CC9B5' }};
    --corporate-hero-highlight-color-2: {{ section.settings.highlight_color_2 | default: '#F4A261' }};
    --corporate-hero-description-color: {{ section.settings.description_color | default: '#666666' }};
    --corporate-hero-primary-btn-bg: #67B7A8;
    --corporate-hero-primary-btn-color: #090909;
    --corporate-hero-secondary-btn-bg: #FFB793;
    --corporate-hero-secondary-btn-color: #090909;
    --corporate-hero-max-width: {{ section.settings.max_width | default: '1440px' }};
    --corporate-hero-padding-top-desktop: {{ section.settings.padding_top_desktop | default: 80 }}px;
    --corporate-hero-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop | default: 80 }}px;
    --corporate-hero-padding-top-mobile: {{ section.settings.padding_top_mobile | default: 60 }}px;
    --corporate-hero-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile | default: 60 }}px;
    --corporate-hero-title-size-desktop: {{ section.settings.title_size_desktop | default: 80 }}px;
    --corporate-hero-title-size-mobile: {{ section.settings.title_size_mobile | default: 36 }}px;
    --corporate-hero-description-size-desktop: {{ section.settings.description_size_desktop | default: 18 }}px;
    --corporate-hero-description-size-mobile: {{ section.settings.description_size_mobile | default: 16 }}px;
  }

  #{{ section.id }}.corporate-hero-section {
    background-color: var(--corporate-hero-bg-color);
    padding-top: var(--corporate-hero-padding-top-mobile);
    padding-bottom: var(--corporate-hero-padding-bottom-mobile);
    overflow: hidden;
    position: relative;
    min-height: 390px;
  }

  #{{ section.id }} .corporate-hero-wrapper {
    max-width: var(--corporate-hero-max-width);
    margin: 0 auto 10px;
    padding: 0 20px;
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #{{ section.id }} .corporate-hero-content {
    text-align: center;
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1101px;
  }

  #{{ section.id }} .corporate-hero-create-image {
    margin: 0 -97px 28px;
  }

  #{{ section.id }} .corporate-hero-create-image img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  #{{ section.id }} .corporate-hero-title {
    font-size: var(--corporate-hero-title-size-mobile);
    line-height: 1.0;
    font-weight: 900;
    color: var(--corporate-hero-title-color);
    max-width: 850px;
    margin: 0 auto 10px auto;
    text-transform: uppercase;
    letter-spacing: 0;
  }

  #{{ section.id }} .corporate-hero-title-highlight {
    color: var(--corporate-hero-highlight-color);
  }

  #{{ section.id }} .corporate-hero-description {
    font-size: var(--corporate-hero-description-size-mobile);
    line-height: 1.65;
    color: var(--corporate-hero-description-color);
    margin: 0 0 20px 0;
    max-width: 924px;
    margin-left: auto;
    margin-right: auto;
    font-weight: 500;
    letter-spacing:0;
  }

  #{{ section.id }} .corporate-hero-buttons {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 28px;
    align-items: center;
  }

  #{{ section.id }} .corporate-hero-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 28px 30px;
    border-radius: 50px;
    text-decoration: none;
    font-size: 16px;
    letter-spacing: 0;
    text-transform: uppercase;
    line-height: 1.2;
    transition: all 0.3s ease;
    width: 100%;
    border: 2px solid #090909;
  }

  #{{ section.id }} .corporate-hero-btn-primary {
    background-color: var(--corporate-hero-primary-btn-bg);
    color: var(--corporate-hero-primary-btn-color);
  }

  #{{ section.id }} .corporate-hero-btn-primary:hover,
  #{{ section.id }} .corporate-hero-btn-primary:focus {
    background: #FFB793;
    color: #090909;
    border-color: #090909;
  }

  #{{ section.id }} .corporate-hero-btn-secondary {
    background-color: var(--corporate-hero-secondary-btn-bg);
    color: var(--corporate-hero-secondary-btn-color);
  }

  #{{ section.id }} .corporate-hero-btn-secondary:hover,
  #{{ section.id }} .corporate-hero-btn-secondary:focus {
    background: #67B7A8;
    color: #090909;
    border-color: #090909;
  }

  #{{ section.id }} .corporate-hero-bottle {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 4;
  }

  #{{ section.id }} .corporate-hero-bottle img {
    width: 120px;
    height: auto;
  }

  #{{ section.id }} .corporate-hero-leaf-left,
  #{{ section.id }} .corporate-hero-leaf-right {
    display: none;
    position: absolute;
    bottom: 0;
    z-index: 3;
  }

  #{{ section.id }} .corporate-hero-leaf-left {
    left: -100px;
  }

  #{{ section.id }} .corporate-hero-leaf-right {
    right: -100px;
  }

  #{{ section.id }} .corporate-hero-bottom-info {
    padding: 30px 0;
    max-width: 1240px;
    margin: 0 auto;
  }

  #{{ section.id }} .corporate-hero-bottom-wrapper {
    max-width: var(--corporate-hero-max-width);
    margin: 0 auto;
  }

  #{{ section.id }} .corporate-hero-steps {
    display: flex;
    justify-content: space-around;
    align-items: center;
    gap: 0;
    flex-wrap: nowrap;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
  }

  /* Hide scrollbar for Chrome, Safari and Opera */
  #{{ section.id }} .corporate-hero-steps::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge */
  #{{ section.id }} .corporate-hero-steps {
    -ms-overflow-style: none;
  }

  #{{ section.id }} .corporate-hero-step-text {
    font-family: 'Futura Hv BT', 'Roundo', sans-serif ;
    font-weight: 900;
    font-size: 24px;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0;
    color: #090909
  }

  #{{ section.id }} .corporate-hero-step {
    display: flex;
    align-items: center;
    gap: 15px;
    flex: 0 0 auto;
    min-width: auto;
  }

  /* Optional: Hide scroll bar on Webkit browsers for cleaner look */
  #{{ section.id }} .corporate-hero-steps::-webkit-scrollbar {
    height: 6px;
    background: #eee;
  }
  #{{ section.id }} .corporate-hero-steps::-webkit-scrollbar-thumb {
    background: var(--corporate-hero-highlight-color);
    border-radius: 3px;
  }

  @media (max-width: 767px) {
.corporate-video-hero__description {
  margin-bottom: 10px !important;
}
