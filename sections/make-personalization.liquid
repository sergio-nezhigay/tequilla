{{ 'make-personalization.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-make-personalization{
      background-color: {{ section.settings.background_color }};
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .container-make-personalization{
      background-image: url({{ section.settings.main_banner | image_url }});
  }
  @media (max-width: 767px){
      .section-make-personalization{
          padding-top: {{ section.settings.padding_top_mob }}px;
          padding-bottom: {{ section.settings.padding_bottom_mob }}px;
      }
  }
{%- endstyle -%}
<section class="section-make-personalization">
  <div class="container-make-personalization">
    {% if section.settings.main_img != blank %}
      {{
        section.settings.main_img
        | image_url: width: section.settings.main_img.width
        | image_tag: class: 'img-make-personalization'
      }}
    {% endif %}
    {% if section.settings.title != blank %}
      <div class="title-make-personalization">{{ section.settings.title }}</div>
    {% endif %}
    {% if section.settings.description != blank %}
      <div class="description-make-personalization">{{ section.settings.description }}</div>
    {% endif %}
  </div>
</section>
{% schema %}
{
  "name": "Make personalization",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_banner",
      "label": "Image banner"
    },
    {
      "type": "image_picker",
      "id": "main_img",
      "label": "Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Desktop"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "padding_top_mob",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mob",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Make personalization"
    }
  ]
}
{% endschema %}
