<div id="{{ section.id }}" class="tequila-hero-section {{ section.settings.custom_classes }}">
  <div class="tequila-hero-wrapper">
    <div class="tequila-hero-content">
      {% if section.settings.title != blank %}
        <h1 class="tequila-hero-title">
          {{ section.settings.title }}
        </h1>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="tequila-hero-description">
          {{ section.settings.description }}
        </div>
      {% endif %}

      <div class="tequila-hero-buttons">
        {% if section.settings.primary_button_text != blank and section.settings.primary_button_url != blank %}
          <a href="{{ section.settings.primary_button_url }}" class="tequila-hero-btn tequila-hero-btn-primary">
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_url != blank %}
          <a href="{{ section.settings.secondary_button_url }}" class="tequila-hero-btn tequila-hero-btn-secondary">
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.create_tequila_image != blank %}
        <div class="tequila-hero-create-image">
          {% assign create_image_alt = section.settings.create_tequila_image.alt | default: 'Create Your Tequila' %}
          {{
            section.settings.create_tequila_image
            | image_url: width: 1101, height: 570
            | image_tag:
              alt: create_image_alt,
              loading: 'lazy',
              sizes: '(max-width: 768px) 100vw, 1101px',
              widths: '400, 600, 800, 1000'
          }}
        </div>
      {% endif %}

      {% if section.settings.tequila_bottle_image != blank %}
        <div class="tequila-hero-bottle">
          {% assign bottle_image_alt = section.settings.tequila_bottle_image.alt | default: 'Tequila Bottle' %}
          {{
            section.settings.tequila_bottle_image
            | image_url: width: 300, height: 600
            | image_tag:
              alt: bottle_image_alt,
              loading: 'lazy',
              sizes: '(max-width: 768px) 200px, 300px',
              widths: '200, 250, 300, 350'
          }}
        </div>
      {% endif %}
    </div>

    {% if section.settings.left_leaf_image != blank %}
      <div class="tequila-hero-leaf-left">
        {% assign left_leaf_alt = section.settings.left_leaf_image.alt | default: 'Decorative Leaf' %}
        {{
          section.settings.left_leaf_image
          | image_url: width: 439, height: 738
          | image_tag:
            alt: left_leaf_alt,
            loading: 'lazy',
            sizes: '(max-width: 768px) 150px, 439px',
            widths: '150, 200, 300, 400'
        }}
      </div>
    {% endif %}

    {% if section.settings.right_leaf_image != blank %}
      <div class="tequila-hero-leaf-right">
        {% assign right_leaf_alt = section.settings.right_leaf_image.alt | default: 'Decorative Leaf' %}
        {{
          section.settings.right_leaf_image
          | image_url: width: 439, height: 738
          | image_tag:
            alt: right_leaf_alt,
            loading: 'lazy',
            sizes: '(max-width: 768px) 150px, 439px',
            widths: '150, 200, 300, 400'
        }}
      </div>
    {% endif %}
  </div>

  <div class="tequila-hero-bottom-info">
    <div class="tequila-hero-bottom-wrapper">
      <div class="tequila-hero-steps">
        {% assign steps = 'step1_text,step2_text,step3_text,step4_text' | split: ',' %}
        {% assign step_defaults = 'SELECT BOTTLE,PERSONALIZE LABEL,PLACE ORDER,ENJOY' | split: ',' %}

        {% for step in steps %}
          {% if section.settings.step_icon != blank %}
            <div class="tequila-hero-step-icon">
              {{
                section.settings.step_icon
                | image_url: width: 41, height: 29
                | image_tag: alt: 'Step Icon', loading: 'lazy'
              }}
            </div>
          {% endif %}

          <div class="tequila-hero-step">
            <div class="tequila-hero-step-text">
              <span>{{ section.settings[step] | default: step_defaults[forloop.index0] }}</span>
            </div>
          </div>
        {% endfor %}

        {% if section.settings.step_icon != blank %}
          <div class="tequila-hero-step-icon">
            {{
              section.settings.step_icon
              | image_url: width: 41, height: 29
              | image_tag: alt: 'Step Icon', loading: 'lazy'
            }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  :root {
    --tequila-hero-bg-color: {{ section.settings.background_color | default: '#f5f5f5' }};
    --tequila-hero-description-color: {{ section.settings.description_color | default: '#a05e5eff' }};
    --tequila-hero-description-size-desktop: {{ section.settings.description_size_desktop | default: 18 }}px;
    --tequila-hero-description-size-mobile: {{ section.settings.description_size_mobile | default: 16 }}px;
    --tequila-hero-highlight-color: {{ section.settings.highlight_color | default: '#7CC9B5' }};
    --tequila-hero-highlight-color-2: {{ section.settings.highlight_color_2 | default: '#F4A261' }};
    --tequila-hero-max-width: {{ section.settings.max_width | default: '1440px' }};
    --tequila-hero-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop | default: 80 }}px;
    --tequila-hero-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile | default: 60 }}px;
    --tequila-hero-padding-top-desktop: {{ section.settings.padding_top_desktop | default: 80 }}px;
    --tequila-hero-padding-top-mobile: {{ section.settings.padding_top_mobile | default: 60 }}px;
    --tequila-hero-primary-btn-bg: {{ section.settings.primary_button_bg | default: '#7CC9B5' }};
    --tequila-hero-primary-btn-color: {{ section.settings.primary_button_color | default: '#000000' }};
    --tequila-hero-secondary-btn-bg: {{ section.settings.secondary_button_bg | default: '#F4A261' }};
    --tequila-hero-secondary-btn-color: {{ section.settings.secondary_button_color | default: '#000000' }};
    --tequila-hero-title-color: {{ section.settings.title_color | default: '#000000' }};
    --tequila-hero-title-size-desktop: {{ section.settings.title_size_desktop | default: 80 }}px;
    --tequila-hero-title-size-mobile: {{ section.settings.title_size_mobile | default: 36 }}px;
  }

  /* Highlight styles */
  #{{ section.id }} strong {
    color: var(--tequila-hero-highlight-color);
  }

  #{{ section.id }} em,
  #{{ section.id }} i {
    color: var(--tequila-hero-highlight-color-2);
  }

  /* Base Styles */
  #{{ section.id }}.tequila-hero-section {
    background-color: var(--tequila-hero-bg-color);
    min-height: 390px;
    overflow: hidden;
    padding-bottom: var(--tequila-hero-padding-bottom-mobile);
    padding-top: var(--tequila-hero-padding-top-mobile);
    position: relative;
  }

  #{{ section.id }} .tequila-hero-wrapper {
    align-items: center;
    display: flex;
    height: 100%;
    justify-content: center;
    margin: 0 auto 10px;
    max-width: var(--tequila-hero-max-width);
    padding: 0 21px;
    position: relative;
  }

  #{{ section.id }} .tequila-hero-content {
    max-width: 1101px;
    position: relative;
    text-align: center;
    width: 100%;
    z-index: 3;
  }

  /* Title */
  #{{ section.id }} .tequila-hero-title {
    color: var(--tequila-hero-title-color);
    font-size: var(--tequila-hero-title-size-mobile);
    font-weight: 900;
    letter-spacing: 0;
    line-height: 1.0;
    margin: 0 auto 10px auto;
    max-width: 850px;
    text-transform: uppercase;
  }

  /* Description */
  #{{ section.id }} .tequila-hero-description {
    color: var(--tequila-hero-description-color);
    font-size: var(--tequila-hero-description-size-mobile);
    line-height: 1.65;
    letter-spacing: 0;
    margin: 0 0 20px 0;
    margin-left: auto;
    margin-right: auto;
    max-width: 614px;
    opacity: 0.8;
  }

  /* Buttons */
  #{{ section.id }} .tequila-hero-buttons {
    align-items: center;
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 28px;
  }

  #{{ section.id }} .tequila-hero-btn {
    align-items: center;
    border: 2px solid #090909;
    border-radius: 50px;
    display: inline-flex;
    font-size: 16px;
    justify-content: center;
    letter-spacing: 0;
    line-height: 1.2;
    padding: 28px 30px;
    text-decoration: none;
    text-transform: uppercase;
    transition: all 0.3s ease;
    width: 100%;
  }

  #{{ section.id }} .tequila-hero-btn-primary {
    background-color: var(--tequila-hero-primary-btn-bg);
    color: var(--tequila-hero-primary-btn-color);
  }

  #{{ section.id }} .tequila-hero-btn-primary:hover {
    box-shadow: 0 8px 20px rgba(124, 201, 181, 0.3);
    transform: translateY(-2px);
  }

  #{{ section.id }} .tequila-hero-btn-secondary {
    background-color: var(--tequila-hero-secondary-btn-bg);
    color: var(--tequila-hero-secondary-btn-color);
  }

  #{{ section.id }} .tequila-hero-btn-secondary:hover {
    box-shadow: 0 8px 20px rgba(244, 162, 97, 0.3);
    transform: translateY(-2px);
  }

  /* Images */
  #{{ section.id }} .tequila-hero-create-image {
    margin: 0 -97px;
  }

  #{{ section.id }} .tequila-hero-create-image img {
    display: block;
    height: auto;
    margin: 0 auto;
    max-width: 100%;
  }

  #{{ section.id }} .tequila-hero-bottle {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 4;
  }

  #{{ section.id }} .tequila-hero-bottle img {
    height: auto;
    width: 120px;
  }

  #{{ section.id }} .tequila-hero-leaf-left,
  #{{ section.id }} .tequila-hero-leaf-right {
    bottom: 0;
    display: none;
    position: absolute;
    z-index: 5;
  }

  #{{ section.id }} .tequila-hero-leaf-left {
    left: -100px;
  }

  #{{ section.id }} .tequila-hero-leaf-right {
    right: -100px;
  }

  /* Bottom Info */
  #{{ section.id }} .tequila-hero-bottom-info {
    margin: 0 auto;
    max-width: 1240px;
    padding: 30px 0;
  }

  #{{ section.id }} .tequila-hero-bottom-wrapper {
    margin: 0 auto;
    max-width: var(--tequila-hero-max-width);
  }

  #{{ section.id }} .tequila-hero-steps {
    align-items: center;
    display: flex;
    flex-wrap: nowrap;
    gap: 0;
    justify-content: space-around;
    overflow-x: auto;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
  }

  #{{ section.id }} .tequila-hero-steps::-webkit-scrollbar {
    display: none;
  }

  #{{ section.id }} .tequila-hero-step {
    align-items: center;
    display: flex;
    flex: 0 0 auto;
    gap: 15px;
    min-width: auto;
  }

  #{{ section.id }} .tequila-hero-step-icon {
    align-items: center;
    display: flex;
    justify-content: center;
  }

  #{{ section.id }} .tequila-hero-step-icon img {
    display: block;
    height: 29px;
    width: 41px;
  }

  #{{ section.id }} .tequila-hero-step-text {
    color: #090909;
    font-family: 'Futura Hv BT', 'Roundo', sans-serif;
    font-size: 24px;
    font-weight: 900;
    letter-spacing: 0;
    line-height: 1;
    text-transform: uppercase;
  }

  /* Media Queries */
  @media (max-width: 767px) {
    #{{ section.id }} .tequila-hero-steps {
      display: flex;
      flex-wrap: nowrap;
      gap: 20px;
      justify-content: flex-start;
      overflow-x: auto;
    }
  }

  @media (min-width: 768px) {
    #{{ section.id }} .tequila-hero-wrapper {
      margin-bottom: 0;
    }

    #{{ section.id }}.tequila-hero-section {
      min-height: 600px;
      padding-bottom: var(--tequila-hero-padding-bottom-desktop);
      padding-top: var(--tequila-hero-padding-top-desktop);
    }

    #{{ section.id }} .tequila-hero-create-image {
      margin-bottom: 7px;
    }

    #{{ section.id }} .tequila-hero-step {
      gap: 15px;
    }

    #{{ section.id }} .tequila-hero-btn {
      font-size: 18px;
      min-width: 368px;
      padding-left: 30px;
      padding-right: 30px;
      width: auto;
    }

    #{{ section.id }} .tequila-hero-btn.tequila-hero-btn-primary {
      min-width: 379px;
    }

    #{{ section.id }} .tequila-hero-title {
      font-size: var(--tequila-hero-title-size-desktop);
      margin-bottom: 10px;
    }

    #{{ section.id }} .tequila-hero-description {
      font-size: var(--tequila-hero-description-size-desktop);
      margin-bottom: 20px;
    }

    #{{ section.id }} .tequila-hero-buttons {
      flex-direction: row;
      gap: 18px;
      justify-content: center;
      margin-bottom: 16px;
    }

    #{{ section.id }} .tequila-hero-bottle img {
      width: 200px;
    }

    #{{ section.id }} .tequila-hero-leaf-left {
      display: block;
      left: -50px;
    }

    #{{ section.id }} .tequila-hero-leaf-right {
      display: block;
      right: -50px;
    }

    #{{ section.id }} .tequila-hero-leaf-left img,
    #{{ section.id }} .tequila-hero-leaf-right img {
      height: 778px;
      width: 439px;
    }

    #{{ section.id }} .tequila-hero-bottom-info {
      padding: 40px 0;
    }

    #{{ section.id }} .tequila-hero-step-icon {
      align-items: center;
      display: flex;
      justify-content: center;
    }

    #{{ section.id }} .tequila-hero-step-icon img {
      display: block;
      height: 29px;
      width: 41px;
    }
  }

  @media (min-width: 1200px) {
    #{{ section.id }} .tequila-hero-leaf-left {
      left: 0;
    }

    #{{ section.id }} .tequila-hero-leaf-right {
      right: 0;
    }

    #{{ section.id }} .tequila-hero-leaf-left img,
    #{{ section.id }} .tequila-hero-leaf-right img {
      height: 778px;
      width: 439px;
    }
  }
</style>

