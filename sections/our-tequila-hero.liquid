<script>
  document.addEventListener('DOMContentLoaded', function () {
    const track = document.querySelector('#{{ section.id }} .tequila-hero-steps');
    if (!track) return;

    // Create infinite marquee by duplicating content multiple times
    function createInfiniteMarquee() {
      const originalItems = track.children;
      const itemsArray = Array.from(originalItems);

      // Store original width before duplication
      const originalWidth = track.scrollWidth;

      // Clone items multiple times to create longer seamless loop
      for (let i = 0; i < 4; i++) {
        itemsArray.forEach((item) => {
          const clone = item.cloneNode(true);
          track.appendChild(clone);
        });
      }

      // Calculate animation duration based on original content width and speed
      const speed = parseInt(track.dataset.speed) || 30; // pixels per second
      const duration = (originalWidth * 2) / speed; // Double duration for smoother animation

      // Set CSS custom property for animation duration
      track.style.setProperty('--tequila-marquee-duration', duration + 's');
    }

    // Initialize infinite marquee
    createInfiniteMarquee();

    // Recalculate on window resize
    let resizeTimeout;
    window.addEventListener('resize', function () {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(function () {
        // Reset and recreate
        track.style.animation = 'none';
        const clones = track.querySelectorAll(':nth-child(n+' + (Math.floor(track.children.length / 5) + 1) + ')');
        clones.forEach((clone) => clone.remove());

        createInfiniteMarquee();

        // Restart animation
        requestAnimationFrame(() => {
          track.style.animation = 'tequila-marquee linear infinite';
          track.style.animationDuration = 'calc(var(--tequila-marquee-duration))';
        });
      }, 250);
    });
  });
</script>

