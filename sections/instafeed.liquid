<style>
  .shopify-section .instagram-feed {
    --section-bg: {{ section.settings.background_color | default: '#ffffff' }};
    --text-primary: {{ section.settings.text_color | default: '#090909' }};
    --text-highlight: {{ section.settings.highlight_color | default: '#67b7a8' }};
    --border-color: {{ section.settings.border_color | default: '#e5e5e5' }};

    position: relative !important;
    width: 100% !important;
    padding: 60px 0 !important;
    margin: 0 !important;
    background-color: var(--section-bg) !important;
  }

  .shopify-section .instagram-feed .instagram-feed__container {
    position: relative !important;
    width: 100% !important;
    max-width: 1216px !important;
    margin: 0 auto !important;
  }

  .shopify-section .instagram-feed .instagram-feed__title {
    font-family: 'Futura Hv BT', 'Futura', sans-serif !important;
    font-weight: 900 !important;
    font-style: normal !important;
    font-size: 24px !important;
    text-align: left !important;
    line-height: 1.2 !important;
    color: var(--text-highlight) !important;
    text-transform: uppercase !important;
    margin: 0 0 20px 0 !important;
    letter-spacing: 0 !important;
  }

  .shopify-section .instagram-feed .instagram-feed__grid {
    display: grid !important;
    grid-template-columns: repeat(4, 1fr) !important;
    gap: 20px !important;
    width: 100% !important;
  }

  .shopify-section .instagram-feed .instagram-feed__item {
    position: relative !important;
    width: 100% !important;
    height: 289px !important;
    border-radius: 10px !important;
    overflow: hidden !important;
    background-color: #f5f5f5 !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    transition: transform 0.3s ease, box-shadow 0.3s ease !important;
  }

  .shopify-section .instagram-feed .instagram-feed__item:hover {
    transform: translateY(-4px) !important;
    box-shadow: 0 8px 25px rgba(9, 9, 9, 0.15) !important;
  }

  .shopify-section .instagram-feed .instagram-feed__item img {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important;
    object-position: center !important;
    display: block !important;
    border-radius: 10px !important;
  }

  .shopify-section .instagram-feed .instagram-feed__item--placeholder {
    color: #999 !important;
    font-family: 'Futura Hv BT', 'Futura', sans-serif !important;
    font-size: 14px !important;
    text-transform: uppercase !important;
  }

  .shopify-section .instagram-feed .instagram-feed__link {
    text-decoration: none !important;
    color: inherit !important;
    display: block !important;
    width: 100% !important;
    height: 100% !important;
  }

  @media (max-width: 1279px) {
    .shopify-section .instagram-feed .instagram-feed__container {
      padding: 0 40px !important;
    }

    .shopify-section .instagram-feed .instagram-feed__title {
      font-size: 48px !important;
      text-align: center !important;
    }

    .shopify-section .instagram-feed .instagram-feed__grid {
      gap: 15px !important;
    }

    .shopify-section .instagram-feed .instagram-feed__item {
      height: 220px !important;
    }
  }

  @media (max-width: 968px) {
    .shopify-section .instagram-feed .instagram-feed__grid {
      grid-template-columns: repeat(2, 1fr) !important;
      gap: 15px !important;
    }

    .shopify-section .instagram-feed .instagram-feed__item {
      height: 250px !important;
    }
  }

  @media (max-width: 480px) {
    .shopify-section .instagram-feed {
      padding: 30px 0 !important;
    }

    .shopify-section .instagram-feed .instagram-feed__container {
      padding: 0 !important;
    }

    .shopify-section .instagram-feed .instagram-feed__title {
      font-size: 16px !important;
      margin-bottom: 10px !important;
    }

    .shopify-section .instagram-feed .instagram-feed__grid {
      display: flex !important;
      overflow-x: auto !important;
      scroll-snap-type: x mandatory !important;
      gap: 15px !important;
      -webkit-overflow-scrolling: touch !important;
      scrollbar-width: none !important;
      -ms-overflow-style: none !important;
      padding: 0 50px;
    }

    .shopify-section .instagram-feed .instagram-feed__grid::-webkit-scrollbar {
      display: none !important;
    }

    .shopify-section .instagram-feed .instagram-feed__item {
      flex: 0 0 289px !important;
      width: 289px !important;
      height: 289px !important;
      scroll-snap-align: center !important;
    }

    .shopify-section .instagram-feed .instagram-feed__item--placeholder {
      display: flex !important;
      align-items: center !important;
      justify-content: center !important;
    }
  }
</style>

<section class="instagram-feed" data-section-id="{{ section.id }}">
  <div class="instagram-feed__container">
    {% if section.settings.instagram_handle %}
      <h2 class="instagram-feed__title">@{{ section.settings.instagram_handle }}</h2>
    {% endif %}

    <div class="instagram-feed__grid">
      {% for block in section.blocks limit: 4 %}
        {% case block.type %}
          {% when 'instagram_post' %}
            <div class="instagram-feed__item" {{ block.shopify_attributes }}>
              {% if block.settings.post_url %}
                <a
                  href="{{ block.settings.post_url }}"
                  class="instagram-feed__link"
                  target="_blank"
                  rel="noopener"
                >
              {% endif %}

              {% if block.settings.post_image %}
                <img
                  src="{{ block.settings.post_image | img_url: '600x600' }}"
                  alt="{{ block.settings.post_image.alt | default: 'Instagram post' }}"
                  loading="lazy"
                  width="289"
                  height="289"
                >
              {% else %}
                <div class="instagram-feed__item--placeholder">Instagram Post</div>
              {% endif %}

              {% if block.settings.post_url %}
                </a>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}

      {% assign remaining_slots = 4 | minus: section.blocks.size %}
      {% if remaining_slots > 0 %}
        {% for i in (1..remaining_slots) %}
          <div class="instagram-feed__item">
            <div class="instagram-feed__item--placeholder">Add Instagram Post</div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Instagram Feed",
  "settings": [
    {
      "type": "header",
      "content": "Instagram Settings"
    },
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Instagram Handle",
      "default": "inbarrelofficial",
      "info": "Your Instagram username (without @)"
    },
    {
      "type": "header",
      "content": "Design"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#090909"
    },
    {
      "type": "color",
      "id": "highlight_color",
      "label": "Instagram Handle Color",
      "default": "#67b7a8"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#e5e5e5"
    }
  ],
  "blocks": [
    {
      "type": "instagram_post",
      "name": "Instagram Post",
      "settings": [
        {
          "type": "image_picker",
          "id": "post_image",
          "label": "Post Image"
        },
        {
          "type": "url",
          "id": "post_url",
          "label": "Post URL",
          "info": "Link to the Instagram post (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Feed",
      "category": "Social",
      "blocks": [
        {
          "type": "instagram_post"
        },
        {
          "type": "instagram_post"
        },
        {
          "type": "instagram_post"
        },
        {
          "type": "instagram_post"
        }
      ]
    }
  ]
}
{% endschema %}
