    margin-bottom: 28px;
    align-items: center;
  }

  #{{ section.id }} .tequila-hero-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 28px 30px;
    border-radius: 50px;
    text-decoration: none;
