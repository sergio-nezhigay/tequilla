<div id="{{ section.id }}" class="pp-tequila-hero {{ section.settings.custom_classes }}">
  <div class="pp-tequila-hero__container">
    <div class="pp-tequila-hero__content">
      {% if section.settings.title != blank %}
        <h1 class="pp-tequila-hero__title">
          {{
            section.settings.title
            | replace: 'YOUR BOTTLE', '<span class="pp-tequila-hero__title-highlight">YOUR BOTTLE</span>'
          }}
        </h1>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="pp-tequila-hero__description">{{ section.settings.description }}</p>
      {% endif %}

      <div class="pp-tequila-hero__buttons">
        {% if section.settings.primary_button_text != blank %}
          <a
            href="{{ section.settings.primary_button_url }}"
            class="pp-tequila-hero__button pp-tequila-hero__button--primary"
          >
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text != blank %}
          <a
            href="{{ section.settings.secondary_button_url }}"
            class="pp-tequila-hero__button pp-tequila-hero__button--secondary"
          >
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <div class="pp-tequila-hero__visual">
      <div class="pp-tequila-hero__large-text">
        <span class="pp-tequila-hero__large-text-create">CREATE</span>
        <span class="pp-tequila-hero__large-text-your">YOUR</span>
        <span class="pp-tequila-hero__large-text-tequila">TEQUILA</span>
      </div>

      {% if section.settings.bottle_image != blank %}
        <div class="pp-tequila-hero__bottle">
          {{
            section.settings.bottle_image
            | image_tag:
              width: section.settings.bottle_image.width,
              height: section.settings.bottle_image.height,
              sizes: '(max-width: 768px) 200px, 300px',
              class: 'pp-tequila-hero__bottle-img'
          }}
        </div>
      {% endif %}

      <div class="pp-tequila-hero__decorative-shapes">
        <div class="pp-tequila-hero__shape pp-tequila-hero__shape--left"></div>
        <div class="pp-tequila-hero__shape pp-tequila-hero__shape--right"></div>
      </div>
    </div>

    {% if section.settings.show_process_steps %}
      <div class="pp-tequila-hero__process">
        <div class="pp-tequila-hero__step">
          <div class="pp-tequila-hero__step-icon">
            {% render 'icon-leaf' %}
          </div>
          <h3 class="pp-tequila-hero__step-title">{{ section.settings.step_1_title }}</h3>
        </div>

        <div class="pp-tequila-hero__step">
          <div class="pp-tequila-hero__step-icon">
            {% render 'icon-leaf' %}
          </div>
          <h3 class="pp-tequila-hero__step-title">{{ section.settings.step_2_title }}</h3>
        </div>

        <div class="pp-tequila-hero__step">
          <div class="pp-tequila-hero__step-icon">
            {% render 'icon-leaf' %}
          </div>
          <h3 class="pp-tequila-hero__step-title">{{ section.settings.step_3_title }}</h3>
        </div>

        <div class="pp-tequila-hero__step">
          <div class="pp-tequila-hero__step-icon">
            {% render 'icon-leaf' %}
          </div>
          <h3 class="pp-tequila-hero__step-title">{{ section.settings.step_4_title }}</h3>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .pp-tequila-hero {
    --font-primary: 'Nunito Sans', -apple-system, sans-serif;
    --color-black: #000000;
    --color-white: #ffffff;
    --color-teal: #7dd3c0;
    --color-coral: #f4a688;
    --color-gray-600: #6b7280;
    --color-gray-100: #f3f4f6;
    --font-weight-black: 900;
    --font-weight-bold: 700;
    --font-weight-normal: 400;
    --border-radius-full: 50px;
    --transition: all 0.3s ease;
  }

  #{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    background: {{ section.settings.background_color }};
    position: relative;
    overflow: hidden;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .pp-tequila-hero__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  .pp-tequila-hero__content {
    text-align: center;
    margin-bottom: 60px;
  }

  .pp-tequila-hero__title {
    font-family: var(--font-primary);
    font-size: {{ section.settings.title_font_size_mobile }}px;
    font-weight: var(--font-weight-black);
    line-height: 1.1;
    color: {{ section.settings.title_color }};
    margin: 0 0 30px 0;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .pp-tequila-hero__title-highlight {
    background: linear-gradient(90deg, var(--color-teal) 0%, var(--color-coral) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .pp-tequila-hero__description {
    font-family: var(--font-primary);
    font-size: {{ section.settings.description_font_size_mobile }}px;
    font-weight: var(--font-weight-normal);
    line-height: 1.6;
    color: {{ section.settings.description_color }};
    margin: 0 0 40px 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .pp-tequila-hero__buttons {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: center;
    justify-content: center;
  }

  .pp-tequila-hero__button {
    display: inline-block;
    padding: 16px 32px;
    font-family: var(--font-primary);
    font-size: 16px;
    font-weight: var(--font-weight-bold);
    text-decoration: none;
    text-transform: uppercase;
    border-radius: var(--border-radius-full);
    transition: var(--transition);
    min-width: 280px;
    text-align: center;
    letter-spacing: 0.5px;
  }

  .pp-tequila-hero__button--primary {
    background-color: {{ section.settings.primary_button_bg }};
    color: {{ section.settings.primary_button_color }};
    border: 2px solid {{ section.settings.primary_button_bg }};
  }

  .pp-tequila-hero__button--primary:hover {
    background-color: transparent;
    color: {{ section.settings.primary_button_bg }};
    transform: translateY(-2px);
  }

  .pp-tequila-hero__button--secondary {
    background-color: {{ section.settings.secondary_button_bg }};
    color: {{ section.settings.secondary_button_color }};
    border: 2px solid {{ section.settings.secondary_button_bg }};
  }

  .pp-tequila-hero__button--secondary:hover {
    background-color: transparent;
    color: {{ section.settings.secondary_button_bg }};
    transform: translateY(-2px);
  }

  .pp-tequila-hero__visual {
    position: relative;
    height: 400px;
    margin: 60px 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .pp-tequila-hero__large-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
    text-align: center;
    width: 100%;
  }

  .pp-tequila-hero__large-text span {
    display: block;
    font-family: var(--font-primary);
    font-weight: var(--font-weight-black);
    font-size: 60px;
    line-height: 0.9;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .pp-tequila-hero__large-text-create {
    color: var(--color-teal);
    margin-bottom: 10px;
  }

  .pp-tequila-hero__large-text-your {
    color: var(--color-coral);
    margin-bottom: 10px;
  }

  .pp-tequila-hero__large-text-tequila {
    color: var(--color-teal);
  }

  .pp-tequila-hero__bottle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
    animation: float 6s ease-in-out infinite;
  }

  .pp-tequila-hero__bottle-img {
    max-width: 200px;
    height: auto;
    filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.1));
  }

  .pp-tequila-hero__decorative-shapes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .pp-tequila-hero__shape {
    position: absolute;
    opacity: 0.1;
    pointer-events: none;
  }

  .pp-tequila-hero__shape--left {
    top: 20%;
    left: 10%;
    width: 200px;
    height: 300px;
    background: linear-gradient(45deg, var(--color-teal), transparent);
    clip-path: polygon(0 0, 70% 0, 30% 100%, 0% 100%);
    transform: rotate(-15deg);
  }

  .pp-tequila-hero__shape--right {
    top: 30%;
    right: 10%;
    width: 200px;
    height: 300px;
    background: linear-gradient(45deg, var(--color-coral), transparent);
    clip-path: polygon(30% 0, 100% 0, 100% 100%, 70% 100%);
    transform: rotate(15deg);
  }

  .pp-tequila-hero__process {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid rgba(125, 211, 192, 0.2);
  }

  .pp-tequila-hero__step {
    display: flex;
    align-items: center;
    gap: 12px;
    flex: 1;
    min-width: 200px;
    justify-content: center;
  }

  .pp-tequila-hero__step-icon {
    width: 24px;
    height: 24px;
    color: var(--color-teal);
    flex-shrink: 0;
  }

  .pp-tequila-hero__step-title {
    font-family: var(--font-primary);
    font-size: 16px;
    font-weight: var(--font-weight-bold);
    color: {{ section.settings.step_title_color }};
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(-50%, -50%) translateY(0px);
    }
    50% {
      transform: translate(-50%, -50%) translateY(-10px);
    }
  }

  @media (min-width: 768px) {
    #{{ section.id }} {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }

    .pp-tequila-hero__title {
      font-size: {{ section.settings.title_font_size_desktop }}px;
    }

    .pp-tequila-hero__description {
      font-size: {{ section.settings.description_font_size_desktop }}px;
    }

    .pp-tequila-hero__buttons {
      flex-direction: row;
      gap: 20px;
    }

    .pp-tequila-hero__visual {
      height: 600px;
      margin: 80px 0;
    }

    .pp-tequila-hero__large-text span {
      font-size: 120px;
    }

    .pp-tequila-hero__bottle-img {
      max-width: 300px;
    }

    .pp-tequila-hero__shape--left {
      width: 300px;
      height: 400px;
    }

    .pp-tequila-hero__shape--right {
      width: 300px;
      height: 400px;
    }

    .pp-tequila-hero__process {
      gap: 40px;
    }

    .pp-tequila-hero__step {
      justify-content: flex-start;
    }
  }

  @media (min-width: 1200px) {
    .pp-tequila-hero__container {
      padding: 0 40px;
    }

    .pp-tequila-hero__visual {
      height: 700px;
    }

    .pp-tequila-hero__large-text span {
      font-size: 140px;
    }
  }
</style>

