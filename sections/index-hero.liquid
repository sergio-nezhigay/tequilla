    max-width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  #{{ section.id }} .tequila-hero-bottle {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 4;
  }

  #{{ section.id }} .tequila-hero-bottle img {
    width: 120px;
    height: auto;
  }

  #{{ section.id }} .tequila-hero-leaf-left,
  #{{ section.id }} .tequila-hero-leaf-right {
