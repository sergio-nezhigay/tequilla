{% assign section_id = section.id %}
{% assign custom_classes = section.settings.custom_classes %}

<section
  id="{{ section_id }}"
  class="logo-carousel-section {% if custom_classes != blank %}{{ custom_classes }}{% endif %}"
>
  <div class="logo-carousel-container">
    {% if section.settings.title != blank %}
      <h2 class="logo-carousel-title">{{ section.settings.title }}</h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <div class="logo-carousel-description">{{ section.settings.description }}</div>
    {% endif %}

    <div class="logo-carousel-wrapper">
      <div class="logo-carousel-track" data-speed="{{ section.settings.scroll_speed }}">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'logo_item' %}
              <div class="logo-carousel-item" {{ block.shopify_attributes }}>
                {% if block.settings.logo != blank %}
                  {% if block.settings.link != blank %}
                    <a
                      href="{{ block.settings.link }}"
                      class="logo-link"
                      {% if block.settings.open_new_tab %}
                        target="_blank"
                      {% endif %}
                    >
                  {% endif %}

                  <div class="logo-image-wrapper">
                    {% assign logo_alt = block.settings.logo.alt | default: 'Logo' %}
                    {{
                      block.settings.logo
                      | image_url: width: 200, height: 80
                      | image_tag:
                        alt: logo_alt,
                        class: 'logo-image',
                        loading: 'lazy',
                        sizes: '(max-width: 767px) 120px, 160px',
                        widths: '120, 160, 200, 240, 320'
                    }}
                  </div>

                  {% if block.settings.link != blank %}
                    </a>
                  {% endif %}
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  :root {
    --logo-carousel-bg: {{ section.settings.background_color }};
    --logo-carousel-max-width: {{ section.settings.max_width }}px;
    --logo-carousel-padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
    --logo-carousel-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;
    --logo-carousel-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --logo-carousel-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --logo-carousel-title-color: {{ section.settings.title_color }};
    --logo-carousel-description-color: {{ section.settings.description_color }};
    --logo-carousel-title-size-desktop: {{ section.settings.title_size_desktop }}px;
    --logo-carousel-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --logo-carousel-description-size-desktop: {{ section.settings.description_size_desktop }}px;
    --logo-carousel-description-size-mobile: {{ section.settings.description_size_mobile }}px;
  }

  #{{ section_id }} {
    background-color: var(--logo-carousel-bg);
    padding-top: var(--logo-carousel-padding-top-desktop);
    padding-bottom: var(--logo-carousel-padding-bottom-desktop);
    width: 100%;
    overflow: hidden;
  }

  #{{ section_id }} .logo-carousel-container {
    max-width: var(--logo-carousel-max-width);
    margin: 0 auto;
  }

  #{{ section_id }} .logo-carousel-title {
    color: var(--logo-carousel-title-color);
    font-size: var(--logo-carousel-title-size-desktop);
    text-align: center;
    margin-bottom: 20px;
    font-weight: 600;
    line-height: 1.2;
  }

  #{{ section_id }} .logo-carousel-description {
    color: var(--logo-carousel-description-color);
    font-size: var(--logo-carousel-description-size-desktop);
    text-align: center;
    margin-bottom: 40px;
    line-height: 1.4;
  }

  #{{ section_id }} .logo-carousel-wrapper {
    width: 100%;
    overflow: hidden;
    mask: linear-gradient(90deg, transparent 0%, white 5%, white 95%, transparent 100%);
    -webkit-mask: linear-gradient(90deg, transparent 0%, white 5%, white 95%, transparent 100%);
  }

  #{{ section_id }} .logo-carousel-track {
    display: flex;
    gap: 40px;
    padding-top: 50px;
    align-items: center;
    width: max-content;
    animation: marquee linear infinite;
    animation-duration: calc(var(--marquee-duration, 30s));
  }

  #{{ section_id }} .logo-carousel-track:hover {
    animation-play-state: {% if section.settings.pause_on_hover %}paused{% else %}running{% endif %};
  }

  @keyframes marquee {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }

  #{{ section_id }} .logo-carousel-item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #ffffff;
    border-radius: 30px;
    border: 1px solid #090909;
    padding: 15px 30px;
    height: 101px;
    width: 229px;
  }

  #{{ section_id }} .logo-image-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
    box-sizing: border-box;
  }

  #{{ section_id }} .logo-image {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  @media (max-width: 767px) {
    #{{ section_id }} {
      padding-top: var(--logo-carousel-padding-top-mobile);
      padding-bottom: var(--logo-carousel-padding-bottom-mobile);
    }

    #{{ section_id }} .logo-carousel-title {
      font-size: var(--logo-carousel-title-size-mobile);
      margin-bottom: 16px;
    }

    #{{ section_id }} .logo-carousel-description {
      font-size: var(--logo-carousel-description-size-mobile);
      margin-bottom: 32px;
    }

    #{{ section_id }} .logo-carousel-track {
      gap: 24px;
      padding-top: 32px;
    }
  }

  @media (max-width: 480px) {
    #{{ section_id }} .logo-carousel-track {
      gap: 10px;
    }

  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const track = document.querySelector('#{{ section_id }} .logo-carousel-track');
    if (!track) return;

    // Create infinite marquee by duplicating content
    function createInfiniteMarquee() {
      const originalItems = track.children;
      const itemsArray = Array.from(originalItems);

      // Clone all items to create seamless loop
      itemsArray.forEach((item) => {
        const clone = item.cloneNode(true);
        track.appendChild(clone);
      });

      // Calculate animation duration based on content width and speed
      const trackWidth = track.scrollWidth / 2; // Divide by 2 since we doubled the content
      const speed = parseInt(track.dataset.speed) || 50; // pixels per second
      const duration = trackWidth / speed;

      // Set CSS custom property for animation duration
      track.style.setProperty('--marquee-duration', duration + 's');
    }

    // Initialize infinite marquee
    createInfiniteMarquee();

    // Recalculate on window resize
    let resizeTimeout;
    window.addEventListener('resize', function () {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(function () {
        // Reset and recreate
        track.style.animation = 'none';
        const clones = track.querySelectorAll(
          '.logo-carousel-item:nth-child(n+' + (Math.floor(track.children.length / 2) + 1) + ')'
        );
        clones.forEach((clone) => clone.remove());

        createInfiniteMarquee();

        // Restart animation
        requestAnimationFrame(() => {
          track.style.animation = 'marquee linear infinite';
          track.style.animationDuration = 'calc(var(--marquee-duration))';
        });
      }, 250);
    });
  });
</script>

