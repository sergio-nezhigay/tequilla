      font-weight: 400;
      line-height: 1.65;
      opacity: 0.8;
      margin-bottom: 10px;
    }


    @media screen and (min-width: 768px) {
        #{{ section.id }} .page-width {
      max-width: 1440px;
      margin: 0 auto;
      padding: 100px 112px 0;
    }
