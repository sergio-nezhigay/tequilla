      font-size: 18px;
      line-height: 1.5;
      opacity: 0.8;
      font-weight: 500;
      text-align: center;
    }

    #{{ section.id }} .row {
      border-bottom: 1px solid var(--color-black);
      margin-bottom: 20px;
    }
    #{{ section.id }} .row .colored-heading {
      font-size: 20px;
      margin-bottom: 10px;
    }
    #{{ section.id }} .row .step-details {
