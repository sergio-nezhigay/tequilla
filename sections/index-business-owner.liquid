      "type": "description_2",
      "name": "Description 2",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "description_2",
          "label": "Second description text"
        }
      ]
    },
    {
      "type": "images_grid",
      "name": "Images Grid",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Bottle Overlay"
        },
        {
          "type": "image_picker",
          "id": "bottle_overlay_image",
          "label": "Bottle overlay image",
          "info": "This bottle will appear overlapping the first image"
        },
        {
          "type": "header",
          "content": "Image 1"
        },
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "Image 1"
        },
        {
          "type": "text",
          "id": "text_1",
          "label": "Text for image 1",
          "default": "Custom messaging, and special details."
        },
        {
          "type": "header",
          "content": "Image 2"
