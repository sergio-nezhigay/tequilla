{% assign header_chunks = '[{"text": "Are you a ", "color": "#090909"}, {"text": "business", "color": "#67B7A8"}, {"text": "owner", "color": "#FFB793"}, {"text": "!", "color": "#090909"}]' %}

{% assign step1_chunks = '[{"text": "1. ", "color": "#090909"}, {"text": "Book a Free ", "color": "#FFB793"}, {"text": "Design Call", "color": "#090909"}]' %}
{% assign step1_details = "We'll learn about your occasion, style, and message." %}
{% assign step2_chunks = '[{"text": "2. We Create Your", "color": "#090909"}, {"text": "Custom Bottle", "color": "#67B7A8"}]' %}
{% assign step2_details = 'Our team crafts your label and fills it with premium tequila.' %}
{% assign step3_chunks = '[{"text": "3. You Deliver a ", "color": "#090909"}, {"text": "Gift to Remember", "color": "#FFB793"}]' %}
{% assign step3_details = "Whether it's for a wedding, a client, or your home barâ€”this is a gift that stands out." %}

<section id="{{ section.id }}" class="business-owner-section">
  <div class="page-width">
    {% render 'heading-colored',
      text_chunks: header_chunks,
      tag: 'h2',
      style: 'margin-top: 40px; text-align: center;',
      class: 'page-header'
    %}

    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'description' %}
          <div class="business-owner-description" {{ block.shopify_attributes }}>
            {{ block.settings.description }}
          </div>
        {% when 'description_2' %}
          <div class="business-owner-description" {{ block.shopify_attributes }}>
            {{ block.settings.description_2 }}
          </div>
        {% when 'images_grid' %}
          <div class="business-owner-images" {{ block.shopify_attributes }}>
            <div class="images-grid">
              {% if block.settings.image_1 != blank %}
                <div class="image-item image-item--with-overlay">
                  {{
                    block.settings.image_1
                    | image_url: width: 400
                    | image_tag:
                      loading: 'lazy',
                      widths: '200, 300, 400, 500',
                      sizes: '(min-width: 990px) 320px, (min-width: 750px) 250px, 200px',
                      alt: block.settings.image_1.alt
                    | escape
                  }}
                  {% if block.settings.bottle_overlay_image != blank %}
                    <div class="bottle-overlay">
                      {{
                        block.settings.bottle_overlay_image
                        | image_url: width: 300
                        | image_tag:
                          loading: 'lazy',
                          widths: '150, 200, 250, 300',
                          sizes: '(min-width: 990px) 200px, (min-width: 750px) 150px, 120px',
                          alt: block.settings.bottle_overlay_image.alt
                        | escape
                      }}
                    </div>
                  {% endif %}
                  {% if block.settings.text_1 != blank %}
                    <p class="image-text">{{ block.settings.text_1 }}</p>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.image_2 != blank %}
                <div class="image-item">
                  {{
                    block.settings.image_2
                    | image_url: width: 400
                    | image_tag:
                      loading: 'lazy',
                      widths: '200, 300, 400, 500',
                      sizes: '(min-width: 990px) 320px, (min-width: 750px) 250px, 200px',
                      alt: block.settings.image_2.alt
                    | escape
                  }}
                  {% if block.settings.text_2 != blank %}
                    <p class="image-text">{{ block.settings.text_2 }}</p>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.image_3 != blank %}
                <div class="image-item">
                  {{
                    block.settings.image_3
                    | image_url: width: 400
                    | image_tag:
                      loading: 'lazy',
                      widths: '200, 300, 400, 500',
                      sizes: '(min-width: 990px) 320px, (min-width: 750px) 250px, 200px',
                      alt: block.settings.image_3.alt
                    | escape
                  }}
                  {% if block.settings.text_3 != blank %}
                    <p class="image-text">{{ block.settings.text_3 }}</p>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
      {% endcase %}
    {% endfor %}

    <div class="row">
      <div>{% render 'heading-colored', text_chunks: step1_chunks %}</div>
      <div>{{ step1_details }}</div>
    </div>

    <div class="row">
      <div>{% render 'heading-colored', text_chunks: step2_chunks %}</div>
      <div>{{ step2_details }}</div>
    </div>

    <div class="row">
      <div>{% render 'heading-colored', text_chunks: step3_chunks %}</div>
      <div>{{ step3_details }}</div>
    </div>
  </div>
</section>

<style>
  #{{ section.id }} .page-header {
    max-width: 306px;
    text-align: center;
    margin: 0 auto;
  }

  #{{ section.id }}.business-owner-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    color: #090909;
  }

  #{{ section.id }} .business-owner-description {
    margin-top: 10px;
    font-size: 18px;
    line-height: 1.65;
  }

  #{{ section.id }} .business-owner-images {
    margin-top: 40px;
  }

  #{{ section.id }} .images-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    max-width: 800px;
    margin: 0 auto;
  }

  #{{ section.id }} .image-item {
    text-align: center;
  }

  #{{ section.id }} .image-item--with-overlay {
    position: relative;
    overflow: visible;
  }

  #{{ section.id }} .bottle-overlay {
    position: absolute;
    top: -10px;
    left: 50%;
    z-index: 10;
    transform: translateX(-50%);
    height: auto;
    width: 22%;
  }

  #{{ section.id }} .bottle-overlay img {
    width: 100%;
    height: auto;
    max-width: 120px;
  }

  #{{ section.id }} .image-item img {
    width: 100%;
    height: auto;
    border-radius: var(--media-radius);
    box-shadow: var(--media-shadow-horizontal-offset) var(--media-shadow-vertical-offset) var(--media-shadow-blur-radius) rgba(var(--color-shadow), var(--media-shadow-opacity));
  }

  #{{ section.id }} .image-text {
    margin-top: 15px;
    font-size: 16px;
    line-height: 1.4;
    color: #333333;
    font-weight: 500;
  }

  @media screen and (min-width: 750px) {
    #{{ section.id }} .business-owner-images {
      margin-top: 60px;
    }

    #{{ section.id }} .images-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }

    #{{ section.id }} .image-text {
      font-size: 18px;
    }

    #{{ section.id }} .bottle-overlay {
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    #{{ section.id }} .bottle-overlay img {
      max-width: 150px;
    }
  }
</style>

{% schema %}
{
  "name": "Business Owner Section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Heading Settings"
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show heading",
      "default": true
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding bottom",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "description",
      "name": "Description",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Description text"
        }
      ]
    },
    {
      "type": "description_2",
      "name": "Description 2",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "description_2",
          "label": "Second description text"
        }
      ]
    },
    {
      "type": "images_grid",
      "name": "Images Grid",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Bottle Overlay"
        },
        {
          "type": "image_picker",
          "id": "bottle_overlay_image",
          "label": "Bottle overlay image",
          "info": "This bottle will appear overlapping the first image"
        },
        {
          "type": "header",
          "content": "Image 1"
        },
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "Image 1"
        },
        {
          "type": "text",
          "id": "text_1",
          "label": "Text for image 1",
          "default": "Custom messaging, and special details."
        },
        {
          "type": "header",
          "content": "Image 2"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "Image 2"
        },
        {
          "type": "text",
          "id": "text_2",
          "label": "Text for image 2",
          "default": "Perfect for corporate gifting, hospitality, and brand activations."
        },
        {
          "type": "header",
          "content": "Image 3"
        },
        {
          "type": "image_picker",
          "id": "image_3",
          "label": "Image 3"
        },
        {
          "type": "text",
          "id": "text_3",
          "label": "Text for image 3",
          "default": "White glove design support from our team"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Business Owner Section",
      "blocks": [
        {
          "type": "description"
        },
        {
          "type": "images_grid"
        }
      ]
    }
  ]
}
{% endschema %}
