{% assign header_text = section.settings.header_text %}
{% assign step1_text = section.settings.step1_text %}
{% assign step2_text = section.settings.step2_text %}
{% assign step3_text = section.settings.step3_text %}
{% assign step1_details = section.settings.step1_details %}
{% assign step2_details = section.settings.step2_details %}
{% assign step3_details = section.settings.step3_details %}

{% comment %} Helper function to convert pipe format to JSON chunks {% endcomment %}
{% assign header_chunks = header_text | split: '---' %}
{% assign header_json = '[' %}
{% for chunk in header_chunks %}
  {% assign parts = chunk | split: '|' %}
  {% if parts.size == 2 %}
    {% assign text = parts[0] %}
    {% assign color = parts[1] %}
    {% if forloop.index > 1 %}{% assign header_json = header_json | append: ', ' %}{% endif %}
    {% assign header_json = header_json
      | append: '{"text": "'
      | append: text
      | append: '", "color": "'
      | append: color
      | append: '"}'
    %}
  {% endif %}
{% endfor %}
{% assign header_json = header_json | append: ']' %}

