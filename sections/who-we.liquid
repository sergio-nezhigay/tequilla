{{ 'section-who-we.css' | asset_url | stylesheet_tag }}

{%- style -%}
.section-who-we{
    background-color: {{ section.settings.background_color }}; 
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
@media (max-width: 767px){
    .section-who-we{
        padding-top: {{ section.settings.padding_top_mob }}px;
        padding-bottom: {{ section.settings.padding_bottom_mob }}px;
    }
}
{%- endstyle -%}

<section class="section-who-we">
    <div class="container-who-we">
        {% if section.settings.main_text != blank %}
            <div class="main-title-who-we">{{ section.settings.main_text }}</div>
        {% endif %}
        <div class="container-who-we-blocks">
            {% for block in section.blocks %}
                <div class="who-we-block" style='background-image:url({{ block.settings.background_image | image_url }})'>
                    <div class="container-image-who-we">
                        {% if block.settings.bottle_image != blank %}
                            {{ block.settings.bottle_image | image_url: width: block.settings.bottle_image.width | image_tag: class: "main-bottle-who-we" }}
                        {% endif %}
                    </div>
                    {% if block.settings.main_title != blank %}
                        <div class="who-we-block-title">{{ block.settings.main_title }}</div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
        {% if section.settings.text_btn != blank and  section.settings.main_url != blank %}
            <a class="main-btn-who-we" href="{{ section.settings.main_url }}">{{ section.settings.text_btn }}</a>
        {% endif %}
    </div>
</section>
{% schema %}
{
    "name": "Section who we",
    "settings": [
        {
            "type": "color",
            "id": "background_color",
            "label": "Background"
        },
        {
            "type": "richtext",
            "id": "main_text",
            "label": "Title"
        },
        {
            "type": "text",
            "id": "text_btn",
            "label": "Text button",
        },
        {
            "type": "url",
            "id": "main_url",
            "label": "Url button"
        },
        {
            "type": "header",
            "content": "Desktop",
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding top",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding bottom",
            "default": 0
        },
        {
            "type": "header",
            "content": "Mobile",
        },
        {
            "type": "range",
            "id": "padding_top_mob",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding top",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_bottom_mob",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding bottom",
            "default": 0
        }
    ],
    "blocks":[
        {
            "type": "block",
            "name": "Block",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "background_image",
                    "label": "Background"
                },
                {
                    "type": "image_picker",
                    "id": "bottle_image",
                    "label": "Image bottle"
                },
                {
                    "type": "richtext",
                    "id": "main_title",
                    "label": "Title"
                },
            ]
        }
    ],
    "presets": [
        {
            "name": "Section who we"
        }
    ]
}
{% endschema %}