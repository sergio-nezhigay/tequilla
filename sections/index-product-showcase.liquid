<!-- Markup -->
<section id="section-{{ section.id }}" class="tequila-product-showcase">
  <div class="tps-container" style="max-width: {{ section.settings.max_width }}px;">
    <div class="tps-wrapper">
      <div class="tps-inner-wrapper">
        <div class="tps-content-side">
          <div class="tps-header">
            {% if section.settings.title_line1 != blank %}
              <h2 class="tps-title">
                <span class="tps-title-main">{{ section.settings.title_line1 }}</span>
                <span class="tps-title-accent">{{ section.settings.title_line2 }}</span>
              </h2>
            {% endif %}

            {% if section.settings.subtitle != blank %}
              <h3 class="tps-subtitle">{{ section.settings.subtitle }}</h3>
            {% endif %}

            {% if section.settings.description != blank %}
              <div class="tps-description">
                {{ section.settings.description }}
              </div>
            {% endif %}

            {% if section.settings.button_text != blank %}
              <a href="{{ section.settings.button_link }}" class=" button-cta">
                {{ section.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </div>

        <div class="tps-image-side">
          {% if section.settings.main_image != blank %}
            <div class="tps-main-image">
              {{
                section.settings.main_image
                | image_url: width: 600
                | image_tag:
                  widths: '300, 400, 500, 600, 700, 800',
                  sizes: '(max-width: 768px) 90vw, 500px',
                  alt: section.settings.title
              }}
            </div>
          {% endif %}
        </div>
      </div>
      <div class="tps-tasting-section">
        {% if section.settings.tasting_title_accent != blank %}
          <h3 class="tps-tasting-title colored-heading">
            <span class="tps-tasting-accent">{{ section.settings.tasting_title_accent }}</span>
            {{ section.settings.tasting_title_main }}
          </h3>
        {% endif %}

        {% if section.settings.tasting_description != blank %}
          <p class="tps-tasting-description">{{ section.settings.tasting_description }}</p>
        {% endif %}

        <div class="tps-tasting-notes">
          {% for block in section.blocks %}
            {% if block.type == 'tasting_note' %}
              <div class="tps-note-item" {{ block.shopify_attributes }}>
                {% if block.settings.note_image != blank %}
                  <div class="tps-note-image">
                    {{
                      block.settings.note_image
                      | image_url: width: 200
                      | image_tag:
                        widths: '100, 150, 200, 250, 300',
                        sizes: '(max-width: 768px) 100px, 150px',
                        alt: block.settings.note_title
                    }}
                  </div>
                {% endif %}
                {% if block.settings.note_subtitle != blank %}
                  <span class="tps-note-subtitle">{{ block.settings.note_subtitle }}</span>
                {% endif %}
                {% if block.settings.note_title != blank %}
                  <h3 class="tps-note-title">{{ block.settings.note_title }}</h3>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class="tps-footer colored-heading">
        {% if section.settings.footer_text_line1 != blank %}
          <p class="tps-footer-text ">
            <span class="tps-footer-line1">{{ section.settings.footer_text_line1 }}</span>
            {% if section.settings.footer_text_line2 != blank %}
              <span class="tps-footer-line2">{{ section.settings.footer_text_line2 }}</span>
            {% endif %}
            <span class="tps-footer-line1">.</span>
          </p>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<!-- Styles -->
<style>
  :root {
    --tps-primary-bg: #f1f1ee;
    --tps-accent-color: #67b7a8;
    --tps-text-dark: #090909;
    --tps-text-light: #666666;
    --tps-white: #ffffff;
  }

  .tequila-product-showcase {
    background: var(--tps-primary-bg);
    overflow: hidden;
    position: relative;
  }

  .tps-container {
    margin: 0 auto;
    padding: 0 112px;
    width: 100%;
  }

  .tps-wrapper {
    background: var(--tps-primary-bg);
    border-radius: var(--tps-border-radius);
    border: 3px solid #5ebdb0;
    min-height: 390px;
    position: relative;
    overflow: hidden;
  }

  .tps-wrapper::before {
    content: '';
    position: absolute;
    top: 15px;
    left: 50px;
    right: 38px;
    bottom: 0px;
    background-image: url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTM0IiBoZWlnaHQ9IjEyMyIgdmlld0JveD0iMCAwIDEzNCAxMjMiIGZpbGw9Im5vbmUiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+CjxyZWN0IHdpZHRoPSIxMzQiIGhlaWdodD0iMTIzIiBmaWxsPSJyZ2JhKDAsIDAsIDAsIDAuMDUpIiBzdHJva2U9InJnYmEoMCwgMCwgMCwgMC4xKSIgc3Ryb2tlLXdpZHRoPSIxIi8+Cjwvc3ZnPgo=');
    background-size: 144px 133px;
    background-repeat: repeat;
    z-index: 0;
    pointer-events: none;
    opacity: 0.3;
    border-radius: calc(var(--tps-border-radius) - 3px);
  }

  .tps-inner-wrapper {
    display: flex;
    width: 100%;
    gap: 10px;
    margin-bottom: 79px;
  }

  .tps-content-side {
    flex: 1;
    padding-top: 117px;
    padding-left: 103px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    z-index: 1;
  }

  .tps-header {
    max-width: 500px;
  }

  .tps-title {
    font-size: 60px;
    line-height: 1.1;
    margin: 0 0 20px;
    color: var(--tps-text-dark);
    font-weight: 900;
    text-transform: uppercase;
  }

  .tps-title-main {
    display: block;
  }

  .tps-title-accent {
    color: var(--tps-accent-color);
    display: block;
  }

  .tps-subtitle {
    font-size: 30px;
    margin: 0 0 20px;
    color: var(--tps-text-dark);
    text-transform: uppercase;
    letter-spacing: 0;
    line-height: 1.2;
  }

  .tps-description {
    font-size: 20px;
    font-weight: 400;
    line-height: 1.65;
    letter-spacing: 0;
    color: var(--tps-text-light);
    margin-bottom: 30px;
  }

  .tps-tasting-section {
    padding: 0 124px;
    position: relative;
    z-index: 1;
    margin-bottom: 51px;
  }

  .tps-tasting-title {
    margin: 0 0 30px;
    color: var(--tps-text-dark);
    text-align: center;
  }

  .tps-tasting-accent {
    color: var(--tps-accent-color);
  }

  .tps-tasting-description {
    font-size: 20px;
    font-weight: 400;
    line-height: 1.65;
    color: var(--tps-text-light);
    margin: 0 auto 30px;
    max-width: 740px;
    text-align: center;
    letter-spacing: 0;
  }

  .tps-tasting-notes {
    display: flex;
    gap: 20px;
    justify-content: center;
  }

  .tps-note-item {
    text-align: center;
    flex: 0 0 auto;
  }

  .tps-note-image {
    width: 250px;
    height: 250px;
    overflow: hidden;
    margin: 0 auto 10px;
  }

  .tps-note-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .tps-note-subtitle {
    display: block;
    font-size: 16px;
    font-weight: 400;
    color: var(--tps-text-light);
    letter-spacing: 0;
    line-height: 1.65;
    margin-bottom: 5px;
  }

  .tps-note-title {
    display: block;
    font-size: 24px;
    line-height: 1.2;
    letter-spacing: 0;
    color: var(--tps-text-dark);
    text-transform: uppercase;
  }

  .tps-footer {
    z-index: 1;
    position: relative;
  }

  .tps-footer-line1 {
    color: var(--tps-text-dark);
  }

  .tps-footer-line2 {
    color: var(--tps-accent-color);
    display: inline;
    margin-left: 5px;
  }

  .tps-image-side {
    flex: 0 0 46%;
    position: relative;
    padding-top: 75px;
    padding-right: 103px;
    z-index: 1;
  }

  .tps-main-image {
    max-width: 100%;
    height: auto;
    z-index: 1;
    position: relative;
  }

  .tps-main-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .button-cta {
    padding-left: 78px;
    padding-right: 78px;
    margin-left: 0;
    margin-right: 0;
    width: fit-content;
    justify-content: flex-start;
  }

  .tps-footer-text {
    text-align: center;
  }

  @media (max-width: 768px) {
    .tps-wrapper::before {
      top: 15px;
      left: 50px;
      right: 38px;
      bottom: 0px;
    }
    .tps-image-side {
      padding: 30px 10px 0;
    }
    .tps-title {
      font-size: 28px;
    }

    .tps-subtitle {
      font-size: 14px;
    }

    .tps-tasting-title {
      font-size: 20px;
    }

    .tps-content-side {
      padding: 20px;
    }
  }
</style>

<!-- Dynamic Styles -->
<style>
  #section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  #section-{{ section.id }} .tps-wrapper {
    background-color: {{ section.settings.section_bg_color }};
  }

  #section-{{ section.id }} .tps-title {
    color: {{ section.settings.title_color }};
  }

  #section-{{ section.id }} .tps-title-accent {
    color: {{ section.settings.title_accent_color }};
  }

  #section-{{ section.id }} .tps-subtitle {
    color: {{ section.settings.subtitle_color }};
  }

  #section-{{ section.id }} .tps-description {
    color: {{ section.settings.description_color }};
  }

  #section-{{ section.id }} .tps-tasting-accent {
    color: {{ section.settings.tasting_accent_color }};
  }

  #section-{{ section.id }} .tps-wrapper::before {
    {% if section.settings.bg_pattern_image != blank %}
      background-image: url('{{ section.settings.bg_pattern_image | image_url: width: 134, height: 123 }}');
    {% endif %}
    opacity: {{ section.settings.bg_pattern_opacity | divided_by: 100.0 }};
  }

  {% if section.settings.reverse_desktop %}
    @media (min-width: 1025px) {
      #section-{{ section.id }} .tps-wrapper {
        flex-direction: row-reverse;
      }
    }
  {% endif %}

  {% if section.settings.mobile_order == 'image_first' %}
    @media (max-width: 1024px) {
      #section-{{ section.id }} .tps-wrapper {
        flex-direction: column-reverse;
      }
    }
  {% endif %}

  @media (min-width: 769px) {
    #section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }

  }

  {% if section.settings.custom_css != blank %}
    {{ section.settings.custom_css }}
  {% endif %}
</style>

